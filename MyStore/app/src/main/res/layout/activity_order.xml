<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.OrderActivity">
    <androidx.appcompat.widget.Toolbar
        android:background="@color/pink"
        app:title="Đặt hàng"
        android:id="@+id/order_toolbar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/order_total_price"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:gravity="center"
        android:text="Tổng tiền: 0đ"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_toolbar"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:fontFamily="@font/aldrich"/>
    <TextView
        android:id="@+id/order_discount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:gravity="center"
        android:text="Giảm giá: 0đ"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_total_price"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:fontFamily="@font/aldrich"/>
    <TextView
        android:id="@+id/order_shipping"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/pink"
        android:gravity="center"
        android:text="Vận chuyển: 0đ"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/order_discount"
        app:layout_constraintWidth_percent="0.9"
        android:layout_marginTop="10dp"
        android:padding="10dp"
        android:fontFamily="@font/aldrich"/>

    <Button
        android:id="@+id/order"
        android:text="Đặt hàng"
        android:layout_marginBottom="10dp"
        app:layout_constraintWidth_percent="0.8"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>